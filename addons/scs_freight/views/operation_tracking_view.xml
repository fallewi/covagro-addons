<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- operation.tracking form view -->
    <record id="operation_tracking_form_view" model="ir.ui.view">
        <field name="name">operation.tracking.form.view</field>
        <field name="model">operation.tracking</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="source_location_id" required="1" />
                            <field name="date" required="1" />
                        </group>
                        <group>
                            <field name="dest_location_id" required="1" />
                            <field name="activity" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
