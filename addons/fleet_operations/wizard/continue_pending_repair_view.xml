<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for Continue Pending Repair Type. -->
    <record id="continue_pending_repair_form_view" model="ir.ui.view">
        <field name="name">continue.pending.repair.form</field>
        <field name="model">continue.pending.repair</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Confirmer les ordres de travail avec force" width="150" height="150">
                <separator string="Avertissement!! Il y a quelques réparations antérieures qui restent à réparer pour ce véhicule" colspan="4" />
                <footer>
                    <button special="cancel"  string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>